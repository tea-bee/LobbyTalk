<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<% provide(:title, @user.account) %>
<h1>
	<%= gravatar_for @user %>
	<%= @user.account %>
</h1>

<p>
  <strong>名前:</strong>
  <%= @user.account %>
</p>

<p>
  <strong>メールアドレス:</strong>
  <%= @user.e_mail %>
</p>

<p>
  <strong>パスワード:</strong>
  <%= @user.password_digest %>
</p>

<%= link_to '変更', edit_user_path(@user) %> |
